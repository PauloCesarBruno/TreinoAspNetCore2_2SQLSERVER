@model ModelCadastro

@{
    Layout = null;
}

    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

          <div class="container">
              <br />
              <h2>Cadastro de Usuarios</h2>
              <hr />

              <form asp-controller="Cadastro" asp-action="Cadastro" method="post">
                  <input type="hidden" asp-for="Id" value="@try { @ViewBag.User.Id } catch { }" />
                  <div class="form-row">
                      <div class="form-group col-6">
                          <label>Nome</label>
                          <input asp-for="Nome" type="text" class="form-control" value="@try { @ViewBag.User.Nome } catch { }" />
                          <span class="text-danger" asp-validation-for="Nome"></span>
                      </div>
                  </div>

                  <div class="form-row">
                      <div class="form-group col-4">
                          <label>Email</label>
                          <input asp-for="Email" type="text" class="form-control" value="@try { @ViewBag.User.Email } catch { }" />
                          <span class="text-danger" asp-validation-for="Email"></span>
                      </div>
                  </div>

                  <div class="form-row">
                      <div class="form-group col-4">
                          <label>Senha</label>
                          <input asp-for="Senha" type="password" class="form-control" value="@try { @ViewBag.User.Senha } catch { }" />
                          <span class="text-danger" asp-validation-for="Senha"></span>
                      </div>
                  </div>

                  <div class="form-row">
                      <div class="form-group col-4">
                          <label>Confirme a Senha</label>
                          <input asp-for="ConfSenha" type="password" class="form-control" value="@try { @ViewBag.User.ConfSenha } catch { }" />
                          <span class="text-danger" asp-validation-for="ConfSenha"></span>
                      </div>
                  </div>

                  <hr />
                  <button type="submit" class="btn btn-primary">Cadastrar</button>
                  <button type="button" class="btn btn-dark ml-3" onclick="Voltar()">Desistir</button>
              </form>
          </div>

          <script>
              function Voltar() {
                  window.location.href = '../Home/Login'
              }
          </script>
