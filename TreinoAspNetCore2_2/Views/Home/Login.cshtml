@model LoginModel

@{
    Layout = null; // Rotina cancelar o uso do Layout-Template evitando o loop infinito.
}

<!--Necessaria as importações dos link´s abaixo por motivo de que acima estou cancelando o Layout-->

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
      asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
      crossorigin="anonymous"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<!--Link abaixo do CDN do font-awesome/4.7.0 para uso de Ícones, se necessáio-->
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css" />

<style>
    .btn-block {
        border-radius: 50px;
        padding-left: 40px;
        padding-right: 40px;
        border-color: #1d82ff;
        background: linear-gradient(45deg, #665fee 0%, #27c2de 100%);
        background: -moz-linear-gradient(45deg, #665fee 0%, #27c2de 100%);
        background: -webkit-linear-gradient(45deg, #665fee 0%, #27c2de 100%);
        box-shadow: 0px 15px 28px -5px rgba(29, 130, 255, 0.45);
        -webkit-box-shadow: 0px 15px 28px -5px rgba(29, 130, 255, 0.45);
        -moz-box-shadow: 0px 15px 28px -5px rgba(29, 130, 255, 0.45);
    }

    .card {
        box-shadow: 1px 11px 70px -20px rgba(0, 0, 0, 0.70);
    }

    .bg-grad {
        background: linear-gradient(45deg, #665fee 0%, #27c2de 100%);
        background: -moz-linear-gradient(45deg, #665fee 0%, #27c2de 100%);
        background: -webkit-linear-gradient(45deg, #665fee 0%, #27c2de 100%);
    }

    h4 {
        color: gray;
    }

    .card-header {
        text-align: center;
        background-color: #fff;
        border-bottom: 0px;
    }

    .logo a img {
        height: 40px !important;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="row">
                <div class="col-lg-5 col-md-7 col-sm-7 mx-auto">
                    <div class="card rounded-1">
                        <div class="card-header">
                            <h3 class="mb-0">Logar no Sistema</h3>
                        </div>
                        <div class="card-body">

                            <!--Sempre Necessário colocar o -> (method="post), asp-controller="Home" e asp-action="Login"-->
                            <form asp-controller="Home" asp-action="Login" method="post">
                                <div class="form-group">
                                    <label for="lblusername">E-Mail (Max. 30 Caracteres)</label>
                                    <input type="text" autofocus="autofocus" class="form-control form-control-range rounded-0" asp-for="Email" maxlength="30">
                                    <!--O "span" abaixo é para mostrar o erro de validação do Required na Classe LoginModel-->
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label>Senha (Max. 10 Caractres)</label>
                                    <input type="password" class="form-control form-control-range  rounded-0" asp-for="Senha" maxlength="10">
                                    <!--O "span" abaixo é para mostrar o erro de validação do Required na Classe LoginModel-->
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                </div>

                                <div class="checkbox mb-3">
                                    <!--Rotina abaixo em Razor é para mostrar a Mensagem de erro que esta no Controller se
                                        se o E-Mail ou a Senha Estiverem errados-->
                                    @{
                                        try
                                        {
                                            var erro = TempData["ErrorLogin"].ToString();
                                            <h5 class="text-danger">@erro</h5>
                                        }
                                        catch
                                        {
                                            //
                                        }
                                    }
                                    <label>
                                        <input type="checkbox" value="remember-me"> Lembrar meu acesso !
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg btn-block" id="btnLogin">Entrar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

