<!-- Inportar:-->
@model ClienteModel

    <script>
        var total = 0;
        $(document).ready(function () {
            $('table tbody tr').each(function () {
                total += parseFloat(this.children[6].innerHTML.replace(',', '.'));
            });
            $('table tfoot td').text(total.toLocaleString('pt-BR', { minimumFractionDigits: 2 }));
        });
    </script>

<!-- COMEÇAR DO MODAL- Dialog-->
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true"></span><span class="sr-only">Close</span></button>
            <h5 style="padding-right: 400px;" class="modal-title">Clientes</h5>
        </div>
        <div class="modal-body">
            <form asp-controller="Cliente" asp-action="Cadastro" method="post">
                <input asp-for="Id" type="hidden" class="form-control" value="@try { @ViewBag.Cliente.Id } catch { }" />

                <div class="form-row">
                    <div class="col col-md-12">
                        <label>Nome</label>
                        <input asp-for="Nome" type="text" class="form-control" required value="@try { @ViewBag.Cliente.Nome } catch { }" />
                    </div>

                    <div class="col col-md-4">
                        <label>CPF</label>
                        <input asp-for="CPF" type="text" class="form-control" required value="@try { @ViewBag.Cliente.CPF } catch { }" />
                    </div>

                    <div class="col col-md-4">
                        <label>Nascimento</label>
                        <input asp-for="DataNascimento" type="text" class="form-control" required value="@try { @ViewBag.Cliente.DataNascimento } catch { }" />
                    </div>

                    <div class="col col-md-4">
                        <label>Limite de Credito</label>
                        <input asp-for="LimiteDeCredito" type="text" class="form-control" required value="@try { @ViewBag.Cliente.LimiteDeCredito } catch { }" />
                    </div>
                </div>
                <br />
                <hr />

                <div class="form-inline">
                    <button type="submit" class="btn btn-success btn-sm"> <i class="fa fa-check"></i> Registrar</button>
                    <button type="button" class="btn btn-info btn-sm ml-3" onclick="Voltar()"><i class="fa fa-times"></i> Desistir</button>
                </div>
            </form>
        </div>
        <!--
           <div class="modal-footer">
               <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        </div>
            -->
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


<script>
    function Voltar() {
        window.location.href = '../../Cliente/Index';
    }
</script>

</div>