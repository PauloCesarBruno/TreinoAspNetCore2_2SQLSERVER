<!-- Inportar:-->
@model ClienteModel

<br /><br /><br />
<h2>Cadastro de Clientes</h2>

<form asp-controller="Cliente" asp-action="Cadastro">
    <input type="hidden" asp-for="Id" value="@try { @ViewBag.Cliente.Id } catch { }" />

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try { @ViewBag.Cliente.Nome } catch { }" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>CPF / CNPJ</label>
        <input asp-for="CPF" type="text" class="form-control" value="@try { @ViewBag.Cliente.CPF } catch { }" />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nascimento</label>
        <input asp-for="DataNascimento" type="text" class="form-control" value="@try { @ViewBag.Cliente.DataNascimento } catch { }" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Limite</label>
        <input asp-for="LimiteDeCredito" type="text" class="form-control" value="@try { @ViewBag.Cliente.LimiteDeCredito } catch { }" />
        <span asp-validation-for="LimiteDeCredito" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>

<br />
<!-- Rotina Abaixo é para voltar a Listagem de Produtos -->
<button type="button" class="btn  btn-info" onclick="Voltar()">Retornar para Listagem de Clientes</button>

<script>
    function Voltar() {
        window.location.href = '../../Cliente/Index';
    }
</script>
